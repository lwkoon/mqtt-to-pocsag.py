# Meshtastic MQTT Listener Configuration Example
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to version control

# =============================================================================
# ENCRYPTION SETTINGS
# =============================================================================
# Base64 encoded encryption key for Meshtastic messages
# Get this from your Meshtastic device or network administrator
ENCRYPTION_KEY=your_base64_encryption_key_here 
# ENCRYPTION_KEY=1PG7OiApB1nwvP+rz05pAQ== for AQ==

# =============================================================================
# MQTT TOPIC SETTINGS
# =============================================================================
# Root topic path for your Meshtastic network
# Format: msh/REGION_CODE/GATEWAY_ID/e/
ROOT_TOPIC=msh/YOUR_REGION/YOUR_GATEWAY/e/

# Example:-
# ROOT_TOPIC=msh/MY_919/2/e/
# CHANNEL=LongFast

# Channel name to monitor (usually LongFast, MediumFast, or ShortFast)
CHANNEL=LongFast

# =============================================================================
# MQTT CONNECTION SETTINGS
# =============================================================================
# MQTT broker hostname or IP address
MQTT_BROKER=your.mqtt.broker.com

# MQTT broker port (usually 1883 for non-SSL, 8883 for SSL)
MQTT_PORT=1883

# Base MQTT topic (usually same as ROOT_TOPIC without /e/ suffix)
MQTT_TOPIC=msh/YOUR_REGION/YOUR_GATEWAY

# MQTT authentication credentials
MQTT_USERNAME=your_mqtt_username
MQTT_PASSWORD=your_mqtt_password

# MQTT keepalive interval in seconds
MQTT_KEEPALIVE=60

# =============================================================================
# DAPNET API SETTINGS
# =============================================================================
# DAPNET API endpoint URL
DAPNET_API_URL=http://hampager.de:8080/calls

# DAPNET user credentials
DAPNET_USER=your_dapnet_username
DAPNET_PASSWORD=your_dapnet_password

# Your amateur radio callsign
CALLSIGN=YOUR_CALLSIGN

# DAPNET transmitter group (e.g., dl-all, 9m-all, etc.)
TRANSMITTER_GROUP=your_transmitter_group

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Maximum number of retry attempts for failed operations
MAX_RETRIES=5

# Base delay in seconds between retry attempts (uses exponential backoff)
RETRY_DELAY=5

# Timeout in seconds for API requests
API_TIMEOUT=30

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
# SQLite database file path
DATABASE_FILE=meshtastic.db

# =============================================================================
# LOGGING SETTINGS
# =============================================================================
# Log file path
LOG_FILE=meshtastic_debug.log

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

